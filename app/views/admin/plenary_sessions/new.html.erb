<% content_for :sub_header do %>
  <div class="col-sm-6">
    <h2><%= t("models_and_attributes.models.plenary_session.other") %></h2>
    <ol class="breadcrumb">
      <li><%= link_to t('page.modules.home'), [:admin, :root] %></li>
      <li><%= link_to t('page.modules.plenary_sessions'), [:admin, :plenary_sessions] %></li>
      <li class="active">
        <strong><%= t('actions.new') %></strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to '#', class: 'btn btn-w-s btn-primary m-t-md',
          data: {'form-submit' => url_for([:admin, :plenary_sessions])} do %>

      <i class="fa fa-save"></i><br/>
      <%= t('buttons.save') %>
    <% end %>
    <%= link_to [:admin, @plenary_session], class: 'btn btn-w-s btn-warning m-t-md' do %>
      <i class="fa fa-remove"></i><br/>
      <%= t('buttons.cancel') %>
    <% end %>
  </div>
<% end %>

<%= flash_messages %>
<%= render 'form' %>
