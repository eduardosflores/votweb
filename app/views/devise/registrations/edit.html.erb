<%= content_for :sub_header do %>
  <div class="col-xs-12 col-md-6">
    <h2><%= resource.name_was %></h2>
    <ol class="breadcrumb">
      <li><%= link_to t('page.modules.home'), admin_root_path %></li>
      <li class="active">
        <strong><%= t('page.modules.profile') %></strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to [:admin, :administrators], class: 'btn btn-w-s btn-primary m-t-md',
          data: {'form-submit' => url_for([:admin, resource])} do %>

      <i class="fa fa-save"></i><br>
      <%= t('buttons.save') %>
    <% end %>
    <%= link_to [:admin, resource], class: 'btn btn-w-s btn-warning m-t-md' do %>
      <i class="fa fa-remove"></i><br>
      <%= t('buttons.cancel') %>
    <% end %>
  </div>
<% end %>

<%= flash_messages %>
<div class="row">
  <div class="col-xs-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content protected">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="row">
              <div class="col-md-6">
                <%= f.input :name, input_html: { autofocus: true } %>
              </div>
              <div class="col-md-6">
                <%= f.input :email, required: true %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <%= f.input :password, input_html: {'fake-password' => true} %>
              </div>
              <div class="col-md-6">
                <%= f.input :password_confirmation, input_html: {'fake-password' => true} %>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12">
                <%= f.input :current_password, required: true %>
              </div>
            </div>

            <%= f.submit '', class: 'hide' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
